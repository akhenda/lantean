{
  "$schema": "https://json-schema.org/schema",
  "$id": "Linting",
  "title": "Configures Linting",
  "description": "Configures ESLint & Prettier",
  "type": "object",
  "properties": {
    "lib": {
      "type": "boolean",
      "description": "Generates a dedicated ESLint config project",
      "default": true,
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Do you want to generate a dedicated eslint config library?"
    },
    "eslintRecommended": {
      "type": "boolean",
      "description": "Applies eslint:recommended",
      "default": true,
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "Do you want to apply eslint:recommended rules?"
    },
    "sonarJs": {
      "type": "boolean",
      "description": "Applies sonarjs:recommended",
      "default": true,
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "x-prompt": "Do you want to apply sonarjs:recommended rules?"
    },
    "unusedImports": {
      "type": "boolean",
      "description": "Applies unused-imports",
      "default": true,
      "$default": {
        "$source": "argv",
        "index": 3
      },
      "x-prompt": "Do you want to apply unused-imports rules?"
    },
    "typescriptRecommended": {
      "type": "boolean",
      "description": "Applies @typescript-eslint/recommended",
      "default": true,
      "$default": {
        "$source": "argv",
        "index": 4
      },
      "x-prompt": "Do you want to apply @typescript-eslint/recommended rules?"
    },
    "deprecation": {
      "type": "boolean",
      "description": "Applies deprecation",
      "default": true,
      "$default": {
        "$source": "argv",
        "index": 5
      },
      "x-prompt": "Do you want to apply deprecation rules?"
    },
    "importOrder": {
      "type": "boolean",
      "description": "Applies import",
      "default": true,
      "$default": {
        "$source": "argv",
        "index": 6
      },
      "x-prompt": "Do you want to apply import order rules?"
    },
    "prettier": {
      "type": "boolean",
      "description": "Applies prettier",
      "default": true,
      "$default": {
        "$source": "argv",
        "index": 7
      },
      "x-prompt": "Do you want to install and apply prettier rules?"
    }
  }
}
